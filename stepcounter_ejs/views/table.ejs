
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th class="text-center">Date</th>
            <th class="text-end">Step Count</th>
        </tr>
    </thead>
    <tbody>
        <% if (steps.length > 0) { %>
            <% steps.forEach((step,index) => { %>
                <tr>
                    <td><%= (index+1) %></td>
                    <td class="text-center"><%= step.date %></td>
                    <td class="text-end"><%= step.count %></td>
                </tr>
            <% }) %>
            <tr>
                <td><strong>Total</strong></td>
                <td><strong></strong></td>
                <td class="text-end"><strong><%= totalSteps %></strong></td>
            </tr>
        <% } else { %>
            <tr>
                <td colspan="3">No step data available.</td>
            </tr>
        <% } %>
    </tbody>
</table>


